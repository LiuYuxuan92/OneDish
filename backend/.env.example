# Server
PORT=3000
NODE_ENV=development

# Redis core switch
REDIS_ENABLED=true
REDIS_URL=redis://127.0.0.1:6379
# Optional split host/port when REDIS_URL absent
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Redis fault injection for drill/testing only
# off | all | comma-separated ops(connect,get,set,mget,eval)
REDIS_FAULT_INJECT_MODE=off

# Quota defaults
QUOTA_GLOBAL_WEB_LIMIT=200000
QUOTA_GLOBAL_AI_LIMIT=50000

# Idempotency
IDEMPOTENCY_TTL_SEC=600
