.input {
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  margin: 12rpx 0;
  background: #fff;
}

.row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-text {
  flex: 1;
}

.item-text.done {
  text-decoration: line-through;
  color: #999;
}

.source {
  color: #999;
  font-size: 22rpx;
}
